<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.mezuestudios.cct.themes.medallion.MainActivity"
    tools:showIn="@layout/activity_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium_sm"
        android:orientation="vertical">
    <!--Apply Button-->
    <android.support.v7.widget.CardView
        android:id="@+id/applycard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:clickable="false"
        android:padding="@dimen/cards_padding"
        android:layout_marginBottom="@dimen/card_margin"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/cards_elevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/apply_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/cards_text_margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_apply_theme" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/welcometest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/cards_text_margin"
                    android:text="@string/apply_theme"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/apply_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/welcometest"
                    android:layout_alignStart="@id/welcometest"
                    android:layout_below="@id/welcometest"
                    android:layout_marginBottom="@dimen/cards_text_margin"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/apply_desc"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- Wallpaper Button-->
    <android.support.v7.widget.CardView
        android:id="@+id/wall_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="false"
        android:padding="@dimen/cards_padding"
        android:layout_marginBottom="@dimen/card_margin"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/cards_elevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/wallpaper_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/cards_text_margin"
                android:src="@drawable/ic_wallpapers" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/wallpaper_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/cards_text_margin"
                    android:text="@string/apply_wallpaper"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/wallpaper_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/wallpaper_test"
                    android:layout_alignStart="@id/wallpaper_test"
                    android:layout_below="@id/wallpaper_test"
                    android:layout_marginBottom="@dimen/cards_text_margin"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/wall_desc"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Icon Button-->
    <android.support.v7.widget.CardView
        android:id="@+id/icon_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/cards_padding"
        android:layout_marginBottom="@dimen/card_margin"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/cards_elevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icons_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/cards_text_margin"
                android:src="@drawable/ic_icons" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/icons_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/cards_text_margin"
                    android:text="@string/icons"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/icons_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/icons_test"
                    android:layout_alignStart="@id/icons_test"
                    android:layout_below="@id/icons_test"
                    android:layout_marginBottom="@dimen/cards_text_margin"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/icons_desc"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Icon Request-->
    <android.support.v7.widget.CardView
        android:id="@+id/iconrequest_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/cards_padding"
        android:layout_marginBottom="@dimen/card_margin"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/cards_elevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconrequest_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/cards_text_margin"
                android:src="@drawable/ic_icon_request" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/iconrequest_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/cards_text_margin"
                    android:text="@string/icon_request"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/iconrequest_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/iconrequest_test"
                    android:layout_alignStart="@id/iconrequest_test"
                    android:layout_below="@id/iconrequest_test"
                    android:layout_marginBottom="@dimen/cards_text_margin"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/icon_desc"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
        <!-- About-->
        <android.support.v7.widget.CardView
            android:id="@+id/about_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            android:clickable="false"
            android:padding="@dimen/cards_padding"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/cards_elevation">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/about_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/cards_text_margin"
                    android:src="@drawable/ic_about" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/card_margin"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/about_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:text="@string/about"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_big" />

                    <TextView
                        android:id="@+id/about_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/about_test"
                        android:layout_alignStart="@+id/about_test"
                        android:layout_below="@+id/about_test"
                        android:layout_marginBottom="@dimen/cards_text_margin"
                        android:lineSpacingMultiplier="1.2"
                        android:text="@string/about_desc"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/text_small" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
